{
  "name": "leetcode-collab",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:all": "yarn install && yarn run install:client && yarn run install:server",
    "install:client": "cd client && yarn install",
    "install:server": "cd server && yarn install",
    "dev": "concurrently \"yarn run dev:client\" \"yarn run dev:server\"",
    "dev:client": "cd client && yarn run dev",
    "dev:server": "cd server && yarn run dev",
    "build": "yarn run build:client && yarn run build:server",
    "build:client": "cd client && yarn run build",
    "build:server": "cd server && yarn run build",
    "start:server": "cd server && yarn start",
    "type-check": "yarn run type-check:client && yarn run type-check:server",
    "type-check:client": "cd client && yarn run type-check",
    "type-check:server": "cd server && yarn run type-check"
  },
  "devDependencies": {
    "concurrently": "^7.0.0"
  }
}